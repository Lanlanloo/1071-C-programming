#include <stdio.h>

void prchar(char c, int n){
	for(int i=1; i<=n; i++){
		printf("%c", c);
	}
}

void prarr(int data[], int n){
	for(int i=0; i<n; i++){
		printf("%2d ", data[i]);
		if((i+1)%10 == 0)
			printf("\n");
	}
	printf("\n");
}

int main(void){
	int n;
	int data[100];
	int A_plus=0; //100
	int A=0;	  //90 ~ 99
	int B=0;	  //80 ~ 89
	int C=0;      //70 ~ 79
	int D=0;      //60 ~ 69
	int E=0;      //0  ~ 59
	int NumberCount=0, FailedCont=0, PassCount=0, Sum=0;
	float Average;

	printf("Enter a series of scores between 0~100(-1 to exit).");
	scanf("%d", &n);
	while(n != -1){
		if(n == 100){
			A_plus++;
			PassCount++;
		}
		else if(n>=90){
			A++;
			PassCount++;
		}
		else if(n>=80){
			B++;
			PassCount++;
		}
		else if(n>=70){
			C++;
			PassCount++;
		}
		else if(n>=60){
			D++;
			PassCount++;
		}
		else{
			E++;
			FailedCont++;
		}

		data[NumberCount++]=n;
		Sum+=n;
		scanf("%d", &n);
	}

	Average = (float)Sum/(float)NumberCount;

	printf("\n");
	printf("Scores listing:\n");
	prarr(data, NumberCount);
	printf("The summary:\n");
	printf("NumberCount = %d\n", NumberCount);
	printf("FailedCont = %d\n", FailedCont);
	printf("PassCount = %d\n", PassCount);
	printf("Average = %.1f\n\n", Average);

	printf("100\t%d ", A_plus);
	prchar('*', A_plus);
	printf("\n");
	printf("90~99\t%d ", A);
	prchar('*', A);
	printf("\n");
	printf("80~89\t%d ", B);
	prchar('*', B);
	printf("\n");
	printf("70~79\t%d ", C);
	prchar('*', C);
	printf("\n");
	printf("60~69\t%d ", D);
	prchar('*', D);
	printf("\n");
	printf("0~59\t%d ", E);
	prchar('*', E);
	printf("\n");

	return 0;
}
